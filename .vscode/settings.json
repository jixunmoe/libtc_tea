{
  "C_Cpp.autoAddFileAssociations": false,
  "editor.formatOnSave": true,
  "clang-tidy.buildPath": "build/",
  "sonarlint.pathToCompileCommands": "${workspaceFolder}/build/compile_commands.json",
  "editor.rulers": [
    120
  ],
  "sonarlint.rules": {
    // Don't suggest std::byte over other types.
    "cpp:S6022": {
      "level": "off"
    }
  }
}
